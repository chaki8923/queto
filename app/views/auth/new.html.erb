
<div class="p-5 mt-5">
  <h1>新規登録</h1>
    <%= form_for(@user,model: @user,url: signup_path,html: {class: 'form-group'}) do |f| %>
      <div class="mb-3">
        <%= f.label :name,"ニックネーム",class: 'form-label' %>
        <%= f.text_field :name,class: 'form-control' %>
        <% @user.errors.full_messages_for(:name).each do |message| %>
          <span class="alert"><%= message %></span>
        <% end %> 
      </div>
      <div class="mb-3">
        <%= f.label :password, "パスワード",class: 'form-label' %>
        <%= f.password_field :password,class: 'form-control',placeholder: "半角英数5文字以上" %>
        <% @user.errors.full_messages_for(:password).each do |message| %>
          <span class="alert"><%= message %></span>
        <% end %> 
      </div>
      <div class="mb-3">
        <%= f.label :password_confirmation, "再入力",class: 'form-label' %>
        <%= f.password_field :password_confirmation,class: 'form-control' %>
        <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
          <span class="alert"><%= message %></span>
        <% end %> 
      </div>
      <%= f.submit "SignUp", class: 'btn btn-primary' %>
    <% end %>
  </div>